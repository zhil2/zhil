<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#FFFFFF"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:layout_gravity="center_horizontal"
        android:background="#0099FF">

        <TextView
            android:id="@+id/tv_center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@mipmap/back"
            android:id="@+id/btn_back"
            />
        <TextView
            android:layout_gravity="center"
            android:textSize="25sp"
            android:text="填写预约单"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="#F5F5DC"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="场馆:"
            android:id="@+id/tv1"
            android:textSize="20dp"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp"
            android:id="@+id/tv_place"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:layout_alignTop="@+id/tv1"
            android:layout_toRightOf="@+id/tv1"
            android:layout_toEndOf="@+id/tv1"
            android:textStyle="bold"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="48dp"
        android:background="#F5F5DC"
        android:layout_marginBottom="10dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格:"
            android:id="@+id/tv2"
            android:textSize="20dp"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:layout_alignBottom="@+id/textView25"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/tv_price"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:layout_alignTop="@+id/tv2"
            android:layout_toRightOf="@+id/tv2"
            android:layout_toEndOf="@+id/tv2"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥/每人"
            android:textSize="17dp"
            android:id="@+id/textView25"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="26dp"
            android:layout_marginEnd="26dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:background="#F5F5DC"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间:"
            android:id="@+id/tv3"
            android:textSize="20dp"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:id="@+id/et_start"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv3"
            android:background="#00000000"
            android:text="请 选 择 开 始 时 间"
            android:textStyle="bold"
            android:textSize="16sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl4"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:background="#F5F5DC"
        android:layout_marginBottom="5dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="参与人数:"
            android:id="@+id/tv4"
            android:textSize="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/tv_long"
            android:inputType="number"
            android:background="@null"
            android:hint="请输入"
            android:maxLength="2"
            android:layout_alignTop="@+id/textView26"
            android:layout_toRightOf="@+id/tv4"
            android:layout_toEndOf="@+id/tv4"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人"
            android:textSize="17dp"
            android:id="@+id/textView26"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="45dp"
            android:layout_marginEnd="45dp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl5"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:background="#F5F5DC"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.80">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注:"
            android:id="@+id/tv5"
            android:textSize="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_alignTop="@+id/et_beizhu"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:id="@+id/et_beizhu"
            android:hint="50字以内"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"
            android:gravity="start"
            android:background="@drawable/shape"
            android:textSize="18dp"
            android:padding="7dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv5"
            />


    </RelativeLayout>


        <Button
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="发送预约单"
            android:layout_gravity="center"
            android:id="@+id/btn_send"
            android:background="#F5F5DC"
            android:layout_marginTop="50dp" />



</LinearLayout>