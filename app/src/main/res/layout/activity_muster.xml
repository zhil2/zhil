<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="#0099FF">

        <TextView
            android:id="@+id/tv_center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@mipmap/tx"
            android:id="@+id/btn_back"
            />
        <TextView
            android:layout_gravity="center"
            android:textSize="25sp"
            android:text="发布召集令"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btn_basketball"
            android:background="@mipmap/yd"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            />
    </android.support.v7.widget.Toolbar>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="场馆:"
            android:textSize="20dp"
            android:id="@+id/tv_place"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_place"
            android:text="东大篮球馆"

            android:layout_marginLeft="15dp"
            android:layout_alignBaseline="@+id/tv_place"
            android:layout_alignBottom="@+id/tv_place"
            android:layout_toRightOf="@+id/tv_place"
            android:layout_marginStart="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目:"
            android:id="@+id/tv_sport"
            android:textSize="20dp"
            android:layout_below="@+id/et_place"
            android:layout_alignLeft="@+id/tv_place"
            android:layout_alignStart="@+id/tv_place"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_sport"
            android:layout_alignTop="@+id/tv_sport"
            android:layout_alignRight="@+id/et_place"
            android:layout_alignEnd="@+id/et_place"
            android:layout_alignLeft="@+id/et_place"
            android:layout_alignStart="@+id/et_place" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="价格:"
            android:id="@+id/tv_price"
            android:textSize="20dp"
            android:layout_alignLeft="@+id/tv_place"
            android:layout_alignStart="@+id/tv_place"
            android:layout_below="@+id/tv_place"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/et_price"
            android:text="50"

            android:layout_alignTop="@+id/tv_price"
            android:layout_alignLeft="@+id/et_place"
            android:layout_alignStart="@+id/et_place"

            android:layout_toLeftOf="@+id/et_price2"
            android:layout_toStartOf="@+id/et_price2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_price2"
            android:text="￥人/小时"

            android:layout_alignBaseline="@+id/et_price"
            android:layout_alignBottom="@+id/et_price"
            android:layout_alignRight="@+id/et_place"
            android:layout_alignEnd="@+id/et_place" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人数:"
            android:id="@+id/tv_number"
            android:textSize="20dp"
            android:layout_below="@+id/et_price"
            android:layout_alignLeft="@+id/tv_price"
            android:layout_alignStart="@+id/tv_price"
            android:layout_marginTop="5dp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_number"
            android:layout_alignTop="@+id/tv_number"
            android:layout_alignLeft="@+id/et_price"
            android:layout_alignStart="@+id/et_price"
            android:layout_toLeftOf="@+id/et_price2"
            android:layout_toStartOf="@+id/et_price2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间："
            android:id="@+id/tv_start"
            android:textSize="20dp"
            android:layout_below="@+id/et_number"
            android:layout_alignLeft="@+id/tv_number"
            android:layout_alignStart="@+id/tv_number"
            android:layout_marginTop="10dp"/>





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/et_start"
            android:layout_alignBottom="@+id/tv_start"
            android:layout_toRightOf="@+id/tv_start"
            android:layout_alignRight="@+id/textView24"
            android:layout_alignEnd="@+id/textView24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="持续时间："
            android:textSize="20dp"
            android:id="@+id/tv_end"
            android:layout_below="@+id/tv_start"
            android:layout_alignLeft="@+id/tv_start"
            android:layout_alignStart="@+id/tv_start"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_end"
            android:layout_toRightOf="@+id/tv_end"
            android:layout_alignBottom="@+id/tv_end"
            android:layout_alignRight="@+id/et_number"
            android:layout_alignEnd="@+id/et_number"
            android:layout_below="@+id/tv_start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="付费方式:"
            android:textSize="20dp"
            android:id="@+id/tv_totalprice"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_send"
            android:layout_toStartOf="@+id/btn_send" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/et_totalprice"

            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/et_end"
            android:layout_alignStart="@+id/et_end" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注:"
            android:id="@+id/tv_note"
            android:textSize="20dp"
            android:layout_below="@+id/et_totalprice"
            android:layout_alignLeft="@+id/tv_totalprice"
            android:layout_alignStart="@+id/tv_totalprice" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_note"
            android:layout_below="@+id/et_totalprice"
            android:layout_alignRight="@+id/et_totalprice"
            android:layout_alignEnd="@+id/et_totalprice"
            android:layout_alignLeft="@+id/et_number"
            android:layout_alignStart="@+id/et_number" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布召集令"
            android:id="@+id/btn_send"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/et_note"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView23"
            android:text="人"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_below="@+id/tv_number"
            android:layout_alignLeft="@+id/et_price2"
            android:layout_alignStart="@+id/et_price2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView24"
            android:text="小时"
            android:layout_alignTop="@+id/tv_end"
            android:layout_alignLeft="@+id/textView23"
            android:layout_alignStart="@+id/textView23" />


    </RelativeLayout>

</LinearLayout>