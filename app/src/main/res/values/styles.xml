<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- view分割线样式 -->
    <style name="bg_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/border_clo</item>
    </style>

    <!-- view中间分割线样式 -->
    <style name="md_line">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:background">@color/border_clo</item>
    </style>

    <style name="Community_Post_type">
        <item name="android:layout_weight">1.0</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@drawable/posttype_text_color</item>
        <!-- 当前的文字太长，会以...表示 -->
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/transparent</item>
        <item name="android:paddingTop">3.0dip</item>
        <item name="android:paddingBottom">3.0dip</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <!-- 去按钮立体效果 -->
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">2dip</item>
    </style>

    <style name="Community_Post_type2">
        <item name="android:textSize">17sp</item>
        <!-- 当前的文字太长，会以...表示 -->
        <item name="android:ellipsize">marquee</item>
        <item name="android:textColor">#f2a50b</item>
        <item name="android:background">@drawable/transparent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:button">@null</item>
    </style>


    <style name="SmallTitleString">
        <item name="android:textColor">@color/lightgrey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 大标题字体style -->
    <style name="BigTitleString">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
